 */
var imgUtils = {
	
	//获取页面图片数据，数据格式：图片ID_排序;图片ID_排序...
	getImgsFromPage : function (){
		var content = "";
		//获取页面图片
		var imgs = $(".nonstock-part1 > ul").find("li");
		//遍历页面图片
		$.each(imgs, function (index, img){
			var imgId = $(img).attr("id");
			
			if (index == imgs.length - 1) {
				content += imgId + "_" + (index + 1);
			} else {
				content += imgId + "_" + (index + 1) + ";";
			}
		});
		
		return content;
	}
}

