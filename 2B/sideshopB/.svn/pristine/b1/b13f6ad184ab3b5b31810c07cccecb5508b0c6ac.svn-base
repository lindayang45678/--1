<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>搜索商品起始页</title>
<meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="black" />
<meta name="format-detection" content="telephone=no" />
<meta name="format-detection" content="email=no" />
<link rel="stylesheet" href="../../css/master.css"/>
</head>

<body>
	<header>
    	<a href="javascript:window.history.go(-1)" class="back"></a>
        <h1>搜索商品</h1>
    </header>
    <section class="container searchgoods">
    	<div id="goods-search" class="goods-search">
        	<input type="text" placeholder="商品搜索" id="searchparm"/>
            <button id="searchbtn">确认</button>
        </div>
        
        <!-- 查到商品时显示 -->
        <div id="searchtrue" style="display:none"><p id='searchtrueback' class="search-font"></p></div>
        
        <!-- 没查到商品时候显示 -->
        <div id="searchfalse" style="display:none"><div class="noresult-img"></div>
        <p id='searchfalseback' class="noresult-font nobr"></p></div>
    </section>
    
    <section id="search-srocll">
		<div class="search-srocll-container">
			<div class="searchyes-list">
			</div>
			<div id="loading">
				<img class="loading" alt="" src="../../images/loading.png" />
			</div>
		</div>
	</section>
   
</body>
<script type="text/javascript" src="../../js/lib/zepto.min.js"></script>
<script type="text/javascript" src="../../js/common/setting.js"></script>
<script type="text/javascript" src="../../js/common/common.js"></script>
<script type="text/javascript" src="../../js/lib/iscroll.min.js"></script>
<script type="text/javascript" src="../../js/shops/searchgoods.js"></script>
</html>
