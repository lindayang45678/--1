/**
 * 得到订单商品区域商品图片的宽度
 * @param imgsLen
 */
function getProImgsWidth(result, imgsLen) {
	if(imgsLen >= 4) {
		var imgsAreaLen = parseInt(imgsLen * proImgAreaWidth) + 10;
		result += "<span style='width:" + imgsAreaLen + "px;overflow-x:auto;'>";
	} else {
		result += "<span>";
	}
	return result;
}